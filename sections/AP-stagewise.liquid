<style>
  
  .stagewise-full-container-{{ section.id }}{
    display:flex;
    justify-content: space-around;
    text-align: center;
    position:relative
  }
  .stagewise--container{
    width:28%;
    border-radius: 2rem;
    overflow: hidden;
    box-shadow: rgba(10, 10, 10, 0.1) 0px 0px 70px 0px;
  }
  .stagewise--container:nth-child(2)::before {
    background-image: url("https://cdn.shopify.com/s/files/1/0889/8773/0249/files/arrow.svg?v=1724752872");
    background-size: contain;
    background-position: center;
    content: "";
    height: 40px;
    width: 40px;
    position: absolute;
    left: 33%;
    top: 20%;
    color: #091b56;
}
  .stagewise--container:nth-child(2)::after {
    background-image: url("https://cdn.shopify.com/s/files/1/0889/8773/0249/files/arrow.svg?v=1724752872");
    background-size: contain;
    background-position: center;
    content: "";
    height: 40px;
    width: 40px;
    position: absolute;
    left: 63.5%;
    top: 20%;
    color: #091b56;
}
  .stagewise-heading{
    background-color:#0D41DF;
    padding:1rem;
  }
  .stagewise-content{
    text-align: start;
    padding: 1rem;
  }
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
   @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  @media screen and (min-width: 1280px){
    .stagewise--container:nth-child(2)::after{
      left: 64%;
    }
  }
  @media screen and (max-width : 890px){
    .stagewise-full-container-{{ section.id }}{
      display:block;
    }
    .stagewise--container{
      width:100%;
      margin-bottom: 2rem;
    }
  }
   @media screen and (max-width : 1100px){
     .stagewise--container:nth-child(2)::before {
      display:none;
    }
    .stagewise--container:nth-child(2)::after {
      display:none;
    }
   }
</style>
<div class="stagewise-full-container-{{ section.id }} color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding page-width">
  {% for blocks in section.blocks %}
    <div class="stagewise--container">
      <div class="stagewise-heading">
        <h2 class="h2" style="color: #6fcce3;">{{ blocks.settings.stage-heading }}</h2>
        <p style="color: #fff;">{{ blocks.settings.stage-subtitle }}</p>
      </div>
      <div class="stagewise-content">
        {{ blocks.settings.stage-content }}
      </div>
    </div>
  {% endfor %}
</div>
<script>
  const stage_content = document.querySelectorAll('.stagewise--container');
  console.log(stage_content);
</script>
{% schema %}
{
  "name": "Stagewise section",
  "tag": "section",
  "settings": [
     {
    "type": "color_scheme",
    "id": "color_scheme",
    "label": "Color Scheme",
    "default": "scheme-1"
  },
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 40
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 52
  }
  ],
  "blocks": [
    {
      "type": "Column",
      "name": "Stages",
      "limit": 3,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "stage-heading",
          "default": "Stage 1",
          "label": "Heading"
        },
        {
          "type": "inline_richtext",
          "id": "stage-subtitle",
          "default": "1:1 computer therapy focus",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "stage-content",
          "default": "<p> Focus on language outcomes.</p>",
          "label": "Content list"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stagewise section"
    }
  ]
}
{% endschema %}
